        @await Component.InvokeAsync("NToastNotify")

        @RenderBody()
        <!-- Main content Start -->
        <!--<div class="main-content">

            <partial name="_LoginTopLayout" />

            <partial name="_landingFooter" />
        </div>-->


    </div>
    <!-- BACKGROUND-IMAGE CLOSED -->
