    <!-- BOOTSTRAP JS -->
    <script src="~/frscassets/plugins/bootstrap/js/popper.min.js"></script>
    <script src="~/frscassets/plugins/bootstrap/js/bootstrap.min.js"></script>

    <!-- SHOW PASSWORD JS -->
    <script src="~/frscassets/js/show-password.min.js"></script>

    <!-- GENERATE OTP JS -->
    <script src="~/frscassets/js/generate-otp.js"></script>

    <!-- Perfect SCROLLBAR JS-->
    <script src="~/frscassets/plugins/p-scroll/perfect-scrollbar.js"></script>

    <!-- Color Theme js -->
    <script src="~/frscassets/js/themeColors.js"></script>

    <!-- CUSTOM JS -->
    <script src="~/frscassets/js/custom.js"></script>
</body>

</html>
