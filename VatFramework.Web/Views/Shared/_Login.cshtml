@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<!DOCTYPE html>
<html>
<head>

    <!-- META DATA -->
    <meta charset="UTF-8">
    <meta name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=0'>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Federal Road Safety Corps (Nigeria) :: Inventory">
    <meta name="author" content="Federal Road Safety Corps (Nigeria)">
    <meta name="keywords" content="admin,admin dashboard,">
    <!-- FAVICON -->
    <link rel="shortcut icon" type="image/x-icon" href="#" />


    <title>@ViewBag.Title</title>
    <!-- STYLE CSS -->
    <link href="~/frscassets/css/style.css" rel="stylesheet" />
    <link href="~/frscassets/css/dark-style.css" rel="stylesheet" />
    <link href="~/frscassets/css/transparent-style.css" rel="stylesheet">
    <link href="~/frscassets/css/skin-modes.css" rel="stylesheet" />

    <!--- FONT-ICONS CSS -->
    <link href="~/frscassets/css/icons.css" rel="stylesheet" />

    <!-- COLOR SKIN CSS -->
    <link id="theme" rel="stylesheet" type="text/css" media="all" href="~/frscassets/colors/color1.css" />
</head>
<body class="app sidebar-mini ltr">
    <!-- BACKGROUND-IMAGE -->
    <div class="login-img">

        <!-- GLOABAL LOADER -->
        <div id="global-loader">
            <img src="~/frscassets/images/loader.svg" class="loader-img" alt="Loader">
