@model VatFramework.Models.DataObjects.Account.ResetChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<!-- forgot password start -->
    <section class="row flexbox-container" style="justify-content: left !important;height:0px !important;margin-top:10px">
        <div class="col-md-1">

        </div>
        <div class="col-md-4  col-11">

            <div class="row m-0">
                <!-- left section-forgot password -->
                <div class="col-md-12 col-12 px-0">
                    <div class="card disable-rounded-right mb-0 p-2">
                        
                            <h4 class="" style=" color: #B2AE04">Change Password</h4>
                      
                       
                        <div class="card-contents">
                            <div class="card-body">
                                <div class="text-muted text-center mb-2">
                                    <small>
                                        Enter the email or phone number you
                                        used
                                        when you joined
                                        and we will send you temporary password
                                    </small>
                                </div>
                                <form class="mb-lg-4" asp-action="UpdatePassword" method="post" asp-controller="account">

                                    @Html.AntiForgeryToken()

                                    <div class="form-group">
                                        <input type="email" asp-for="Email" class="form-control" id="Email" readonly="readonly" placeholder="Email address">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>




                                    <div class="form-group">
                                       <input type="password" class="form-control" id="NewPassword" asp-for="NewPassword" placeholder="New Password">

                                        <input type="hidden" class="form-control" id="token" asp-for="token">
                                        <input type="hidden" class="form-control" id="userid" asp-for="userid">

                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <input type="password" class="form-control" id="ConfirmPassword" asp-for="ConfirmPassword" placeholder="Confirm Password">
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>




                                    <button type="submit" class="btn btn-FRSCInventory glow w-100 position-relative">Reset Password<i id="icon-arrow" class="bx bx-right-arrow-alt"></i></button>

                                </form>


                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </section>
<!-- forgot password ends -->