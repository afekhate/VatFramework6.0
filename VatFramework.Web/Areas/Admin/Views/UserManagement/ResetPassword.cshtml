@model VatFramework.Models.DataObjects.Account.AdminUserSettingViewModel

<div class="modal-header">
    <button type="button" class="close" onclick="CloseModal()" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">Reset   <b> @Model.FirstName  </b> Password</h4>
</div>
  <span style="color:red"> @Html.Raw("All field marked as * means required entry")<br /><br /></span>  <form novalidate asp-controller="@ViewBag.ControllerName" asp-action="@ViewBag.PostAction">
    <input type="hidden" name="Id" asp-for="Id" />
    <input type="hidden" name="Email" asp-for="Email" />

    <div class="modal-body" style="padding-left:50px;padding-right:50px;">

        <h5 style="text-align:center"> You are about to reset the password for <br /> @Model.FirstName   @Model.LastName to his/her registered email<br /><br /><div style="color:red"> @Model.Email</div></h5>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" onclick="CloseModal()">No</button>
        <button type="submit" class="btn btn-light-secondary btn-danger">Yes</button>
    </div>

</form>